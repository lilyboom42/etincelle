{# templates/customization/list.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Liste des Personnalisations{% endblock %}

{% block body %}
    <h1>Liste des Personnalisations</h1>

    <a href="{{ path('customization_new') }}" class="btn btn-success">Ajouter une nouvelle personnalisation</a>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Prix</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for customization in customizations %}
                <tr>
                    <td>{{ customization.id }}</td>
                    <td>{{ customization.name }}</td>
                    <td>{{ customization.description }}</td>
                    <td>{{ customization.price }}</td>
                    <td>
                        <a href="{{ path('customization_detail', { id: customization.id }) }}" class="btn btn-info">Voir</a>
                        <a href="{{ path('customization_edit', { id: customization.id }) }}" class="btn btn-primary">Modifier</a>
                        <a href="{{ path('customization_delete', { id: customization.id }) }}" class="btn btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette personnalisation ?');">Supprimer</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">Aucune personnalisation trouvée.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
