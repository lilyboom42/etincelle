{% extends 'base.html.twig' %}

{% block title %}Mon Panier{% endblock %}

{% block body %}
    <h1>Votre Panier</h1>

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">{{ message }}</div>
    {% endfor %}

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">{{ message }}</div>
    {% endfor %}

    {% if cart|length > 0 %}
        <table>
            <thead>
                <tr>
                    <th>Produit</th>
                    <th>Quantité</th>
                    <th>Prix Unitaire</th>
                    <th>Total</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for item in cart %}
                    <tr>
                        <td>{{ item.product.name }}</td>
                        <td>
                            <form action="{{ path('update_cart_quantity', {id: item.product.id}) }}" method="post">
                                <input type="number" name="quantity" value="{{ item.quantity }}" min="1" max="{{ item.product.stockQuantity }}">
                                <button type="submit">Mettre à jour</button>
                            </form>
                        </td>
                        <td>{{ item.product.price|number_format(2, '.', ',') }} €</td>
                        <td>{{ (item.product.price * item.quantity)|number_format(2, '.', ',') }} €</td>
                        <td>
                            <a href="{{ path('remove_from_cart', {id: item.product.id}) }}" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce produit du panier ?');">Supprimer</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>Votre panier est vide.</p>
    {% endif %}

{% endblock %}
