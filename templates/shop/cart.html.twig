{% extends 'base.html.twig' %}

{% block title %}Mon Panier{% endblock %}

{% block body %}
    <h1 style="text-align: center;">Votre Panier</h1> {# Centrer le titre avec inline CSS #}

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger" style="text-align: center;">{{ message }}</div>
    {% endfor %}

    {% for message in app.flashes('success') %}
        <div class="alert alert-success" style="text-align: center;">{{ message }}</div>
    {% endfor %}

      {% if cart|length > 0 %}
        <table>
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Produit</th>
                    <th>Quantité</th>
                    <th>Prix Unitaire</th>
                    <th>Total</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for item in cart %}
                    <tr>
                        <td>
                            {% if item.product.productImages|length > 0 and item.product.productImages|first.imagesPath is not empty %}
                                {% set imageUrl = vich_uploader_asset(item.product.productImages|first, 'imageFile') %}
                                <img src="{{ imageUrl }}" alt="{{ item.product.name }}" class="product-image">
                            {% else %}
                                <p>Aucune image</p>
                            {% endif %}
                        </td>
                        <td>{{ item.product.name }}</td>
                        <td>
                            <form action="{{ path('update_cart_quantity', {id: item.product.id}) }}" method="post">
                                <input type="number" name="quantity" value="{{ item.quantity }}" min="1" max="{{ item.product.stockQuantity }}">
                                <button type="submit">Mettre à jour</button>
                            </form>
                        </td>
                        <td>{{ item.product.price|number_format(2, '.', ',') }} €</td>
                        <td>{{ (item.product.price * item.quantity)|number_format(2, '.', ',') }} €</td>
                        <td>
                            <a href="{{ path('remove_from_cart', {id: item.product.id}) }}" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce produit du panier ?');">Supprimer</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <!-- Bouton Valider et Payer -->
        <div style="text-align: center; margin-top: 20px;">
            <a href="{{ path('cart_checkout') }}" class="btn btn-primary btn-lg">Valider et Payer</a>
        </div>
    {% else %}
        <p style="text-align: center;">Votre panier est vide.</p>
    {% endif %}
{% endblock %}
