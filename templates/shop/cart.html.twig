{# templates/shop/cart.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Votre Panier{% endblock %}

{% block body %}
    <div class="container my-5">
        <h1 class="text-center mb-4">Votre Panier</h1>

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger text-center" role="alert">
                {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('success') %}
            <div class="alert alert-success text-center" role="alert">
                {{ message }}
            </div>
        {% endfor %}

        {% if cart|length > 0 %}
            {# Calculer le total du panier #}
            {% set cartTotal = 0 %}
            {% for item in cart %}
                {% set cartTotal = cartTotal + (item.product.price * item.quantity) %}
            {% endfor %}

            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col">Image</th>
                            <th scope="col">Produit</th>
                            <th scope="col">Quantité</th>
                            <th scope="col">Prix Unitaire</th>
                            <th scope="col">Sous-total</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for item in cart %}
                            <tr>
                                <td>
                                    {% if item.product.productImages|length > 0 %}
                                        {% set imageUrl = vich_uploader_asset(item.product.productImages|first, 'imageFile') %}
                                        <img src="{{ imageUrl }}" alt="{{ item.product.name }}" class="img-fluid" style="max-width: 100px;">
                                    {% else %}
                                        <span class="text-muted">Aucune image</span>
                                    {% endif %}
                                </td>
                                <td>{{ item.product.name }}</td>
                                <td>
                                    <form action="{{ path('update_cart_quantity', {id: item.product.id}) }}" method="post" class="d-flex align-items-center">
                                        <input type="number" name="quantity" value="{{ item.quantity }}" min="1" max="{{ item.product.stockQuantity }}" class="form-control me-2" style="width: 80px;">
                                        <button type="submit" class="btn btn-secondary btn-sm">Mettre à jour</button>
                                    </form>
                                </td>
                                <td>{{ item.product.price|number_format(2, ',', ' ') }} €</td>
                                <td>{{ (item.product.price * item.quantity)|number_format(2, ',', ' ') }} €</td>
                                <td>
                                    <form action="{{ path('remove_from_cart', {id: item.product.id}) }}" method="post" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce produit du panier ?');">
                                        <button type="submit" class="btn btn-danger btn-sm">Supprimer</button>
                                    </form>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>

            <!-- Total du Panier -->
            <div class="d-flex justify-content-end mb-4">
                <h4>Total: {{ cartTotal|number_format(2, ',', ' ') }} €</h4>
            </div>

            <!-- Bouton Valider et Payer -->
            <div class="text-center">
                <a href="{{ path('checkout_page') }}" class="btn btn-primary btn-lg">Procéder au paiement</a>
            </div>
        {% else %}
            <div class="text-center">
                <p class="lead">Votre panier est vide.</p>
            </div>
        {% endif %}
    </div>
{% endblock %}
