{% extends 'base.html.twig' %}
{% if is_granted('ROLE_ADMIN') %}
{% block title %}Calendrier des Rendez-vous Payés{% endblock %}

{% block body %}
<h1>Calendrier des Rendez-vous Payés</h1>

<ul>
    {% for appointment in appointments %}
        {% if appointment.status == constant('App\\Enum\\AppointmentStatus::PAID') %}
            <li>{{ appointment.datetime|date('d/m/Y H:i') }} - {{ appointment.service.name }} - {{ appointment.price }} €</li>
        {% endif %}
    {% endfor %}
</ul>
	{% endif %}

{% endblock %}
