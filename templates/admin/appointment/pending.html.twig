{% extends 'base.html.twig' %}
{% if is_granted('ROLE_ADMIN') %}
{% block title %}Demandes de rendez-vous en attente{% endblock %}

{% block body %}
<h1>Demandes de rendez-vous en attente</h1>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Date et heure</th>
            <th>Service</th>
            <th>Client</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for appointment in appointments %}
            {% if appointment.status == constant('App\\Enum\\AppointmentStatus::PENDING') %}
                <tr>
                    <td>{{ appointment.id }}</td>
                    <td>{{ appointment.datetime|date('d/m/Y H:i') }}</td>
                    <td>{{ appointment.service.name }}</td>
                    <td>{{ appointment.user.email }}</td>
                    <td>
                        <form action="{{ path('admin_appointment_approve', {'id': appointment.id}) }}" method="post" style="display:inline;">
                            <button class="btn btn-success">Approuver</button>
                        </form>
                        <form action="{{ path('admin_appointment_reject', {'id': appointment.id}) }}" method="post" style="display:inline;">
                            <button class="btn btn-danger">Refuser</button>
                        </form>
                    </td>
                </tr>
            {% endif %}
        {% else %}
            <tr>
                <td colspan="5" class="text-center">Aucune demande de rendez-vous en attente.</td>
            </tr>
        {% endfor %}
    </tbody>
</table>
	{% endif %}

{% endblock %}
