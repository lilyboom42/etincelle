{% extends 'base.html.twig' %}

{% block title %}Valider la commande{% endblock %}

{% block body %}
    <h1 style="text-align: center;">Valider la commande</h1>

    {% if cart|length > 0 %}
        <table>
            <thead>
                <tr>
                    <th>Produit</th>
                    <th>Quantité</th>
                    <th>Prix Unitaire</th>
                    <th>Sous-total</th>
                </tr>
            </thead>
            <tbody>
                {% for item in cart %}
                    <tr>
                        <td>{{ item.product.name }}</td>
                        <td>{{ item.quantity }}</td>
                        <td>{{ item.product.price|number_format(2, '.', ',') }} €</td>
                        <td>{{ item.subtotal|number_format(2, '.', ',') }} €</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <h3>Total : {{ total|number_format(2, '.', ',') }} €</h3>

        <form id="payment-form" style="text-align: center; margin-top: 20px;">
            <input type="hidden" name="_token" value="{{ csrf_token('checkout') }}">
            <button id="checkout-button" type="button" class="btn btn-success btn-lg">Payer avec Stripe</button>
        </form>
    {% else %}
        <p>Votre panier est vide.</p>
    {% endif %}
{% endblock %}

{% block javascript %}
    <script src="https://js.stripe.com/v3/"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Initialiser Stripe avec la clé publique
            var stripe = Stripe('{{ stripe_public_key }}');
            console.log('Stripe initialisé avec la clé publique :', '{{ stripe_public_key }}'); // Pour débogage

            var checkoutButton = document.getElementById('checkout-button');

            if (checkoutButton) {
                checkoutButton.addEventListener('click', function(event) {
                    event.preventDefault();

                    // Créer une session de paiement Stripe via l'API
                    fetch('{{ path('checkout') }}', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/x-www-form-urlencoded',
                        },
                        body: '_token={{ csrf_token('checkout') }}'
                    })
                    .then(function(response) {
                        return response.json();
                    })
                    .then(function(session) {
                        if (session.id) {
                            // Rediriger vers Stripe Checkout
                            return stripe.redirectToCheckout({ sessionId: session.id });
                        } else {
                            alert('Erreur : ' + (session.error || 'Session Stripe non valide.'));
                        }
                    })
                    .catch(function(error) {
                        console.error('Erreur:', error);
                        alert('Une erreur est survenue lors du paiement.');
                    });
                });
            } else {
                console.error("Le bouton de paiement avec l'ID 'checkout-button' n'a pas été trouvé.");
            }
        });
    </script>
{% endblock %}