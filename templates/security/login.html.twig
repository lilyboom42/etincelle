{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}
<div class="container">
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <div class="form-group">
            <label for="username">Email</label>
            <div class="input-with-icon email">
                <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="username" required autofocus>
            </div>
        </div>

        <div class="form-group">
            <label for="password">Mot de passe</label>
            <div class="input-with-icon password">
                <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
            </div>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <div class="form-group-checkbox">
            <input type="checkbox" name="_remember_me" id="_remember_me" class="form-control-checkbox" />
            <label for="_remember_me">Se souvenir de moi</label>
        </div>

        <div class="button-group">
            <button type="submit" class="btn btn-primary">Se connecter</button>
            <a href="{{ path('app_register') }}" class="btn btn-primary">S'inscrire</a>
        </div>

        <a href="{{ path('app_forgotten_password') }}" class="btn btn-link mt-3">Mot de passe oubli√© ?</a>
    </form>
</div>
{% endblock %}
