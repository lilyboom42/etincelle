{# templates/security/login.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1>Connexion</h1>

    {% if error %}
        <div class="alert alert-danger">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}

    <form action="{{ path('app_login') }}" method="post">
        <!-- Champ Email -->
        <div class="form-group mb-3">
            <label for="email">Email</label>
            <div class="input-with-icon email">
                <input 
                    type="email" 
                    value="{{ last_username }}" 
                    name="email"          
                    id="email" 
                    class="form-control"   
                    autocomplete="username" 
                    required 
                    autofocus
                />
            </div>
        </div>

        <!-- Champ Mot de passe -->
        <div class="form-group mb-3">
            <label for="password">Mot de passe</label>
            <div class="input-with-icon password">
                <input 
                    type="password" 
                    name="_password" 
                    id="password" 
                    class="form-control" 
                    autocomplete="current-password" 
                    required
                />
            </div>
        </div>

        <!-- Token CSRF -->
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <!-- Case à cocher Se souvenir de moi -->
        <div class="form-group form-check mb-3">
            <input 
                type="checkbox" 
                name="_remember_me" 
                id="_remember_me" 
                class="form-check-input"
            />
            <label for="_remember_me" class="form-check-label">Se souvenir de moi</label>
        </div>

        <!-- Boutons de soumission et d'inscription -->
        <div class="button-group mb-3">
            <button type="submit" class="btn btn-primary">Se connecter</button>
            <a href="{{ path('app_register') }}" class="btn btn-secondary">S'inscrire</a>
        </div>

        <!-- Lien Mot de passe oublié -->
        <div class="mb-3">
            <a href="{{ path('app_forgotten_password') }}" class="btn btn-link">Mot de passe oublié ?</a>
        </div>
    </form>
</div>
{% endblock %}
