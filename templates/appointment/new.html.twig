{% extends 'base.html.twig' %}

{% block title %}Prendre un rendez-vous{% endblock %}

{% block body %}
    <h1>Prendre un rendez-vous</h1>

    {% for message in app.flashes('info') %}
        <div class="alert alert-info">{{ message }}</div>
    {% endfor %}

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">{{ message }}</div>
    {% endfor %}

    <h2>Nos services</h2>
    <ul>
        {% for service in services %}
            <li>{{ service.name }} - {{ service.description }}</li>
        {% endfor %}
    </ul>

    {% if form %}
        <h2>Formulaire de prise de rendez-vous</h2>
        {{ form_start(form) }}
            {{ form_widget(form) }}
            <button type="submit" class="btn btn-primary-custom">Demander un rendez-vous</button>
        {{ form_end(form) }}
    {% else %}
        <p class="text-danger-custom">Connectez-vous pour demander un rendez-vous. <a href="{{ path('app_login') }}">Connexion</a></p>
    {% endif %}
{% endblock %}
