{% extends 'base.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block body %}
    <div class="container my-5">
        <h1 class="text-center mb-4">Mon Profil</h1>

        {% if is_granted('ROLE_ADMIN') %}
            <div class="admin-dashboard mb-5">
                <h2>Tableau de Bord Administrateur</h2>
                <div class="d-flex flex-wrap gap-3 mt-3">
                    <a href="{{ path('service_index') }}" class="btn btn-primary">Gérer les Services</a>
                    <a href="{{ path('admin_appointment_pending') }}" class="btn btn-primary">Gérer les Rendez-vous en Attente</a>
                    <a href="{{ path('paid_appointments') }}" class="btn btn-primary">Voir Rendez-vous Payés</a>
                    <a href="{{ path('admin_order_index') }}" class="btn btn-primary">Gestion des stocks et envois</a>
                    <a href="{{ path('admin_user_index') }}" class="btn btn-primary">Gérer les Utilisateurs</a>
                </div>
            </div>
        {% endif %}

        <div class="profile-form-section mb-5">
            <h2>Mes Informations</h2>
            <p>Vous pouvez modifier vos informations personnelles en remplissant le formulaire ci-dessous.</p>
            <div>
                {{ form_start(form, {'attr': {'class': 'row g-3'}}) }}
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="{{ form.firstName.vars.id }}" class="form-label">Prénom</label>
                            {{ form_widget(form.firstName, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.firstName) }}
                        </div>
                        <div class="mb-3">
                            <label for="{{ form.lastName.vars.id }}" class="form-label">Nom</label>
                            {{ form_widget(form.lastName, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.lastName) }}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="{{ form.email.vars.id }}" class="form-label">Email</label>
                            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.email) }}
                        </div>
                        <div class="mb-3">
                            <label for="{{ form.username.vars.id }}" class="form-label">Nom d'utilisateur</label>
                            {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.username) }}
                        </div>
                    </div>
                </div>

                <div class="password-section mb-3">
                    <div class="mb-3">
                        <label for="{{ form.plainPassword.first.vars.id }}" class="form-label">Mot de passe</label>
                        {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.plainPassword.first) }}
                    </div>
                    <div class="mb-3">
                        <label for="{{ form.plainPassword.second.vars.id }}" class="form-label">Confirmer le mot de passe</label>
                        {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.plainPassword.second) }}
                    </div>
                </div>
                <div class="mb-3">
                    <label for="{{ form.userDetail.city.vars.id }}" class="form-label">Ville</label>
                    {{ form_widget(form.userDetail.city, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.userDetail.city) }}
                </div>

                <div class="mb-3">
                    <label for="{{ form.userDetail.address.vars.id }}" class="form-label">Adresse</label>
                    {{ form_widget(form.userDetail.address, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.userDetail.address) }}
                </div>

                <div class="mb-3">
                    <label for="{{ form.userDetail.country.vars.id }}" class="form-label">Pays</label>
                    {{ form_widget(form.userDetail.country, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.userDetail.country) }}
                </div>

                <div class="mb-3">
                    <label for="{{ form.userDetail.postalCode.vars.id }}" class="form-label">Code Postal</label>
                    {{ form_widget(form.userDetail.postalCode, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.userDetail.postalCode) }}
                </div>

                <div class="mb-3">
                    <label for="{{ form.userDetail.phoneNumber.vars.id }}" class="form-label">Numéro de téléphone</label>
                    {{ form_widget(form.userDetail.phoneNumber, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.userDetail.phoneNumber) }}
                </div>

                <div class="mb-3">
                    <label for="{{ form.userDetail.birthDate.vars.id }}" class="form-label">Date de naissance</label>
                    {{ form_widget(form.userDetail.birthDate, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.userDetail.birthDate) }}
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Mettre à jour</button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>

        <div class="orders-section mb-5">
            <h2 class="mb-4">Mes Commandes</h2>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Commande ID</th>
                            <th>Date</th>
                            <th>Montant</th>
                            <th>Statut</th>
                            <th class="d-none d-md-table-cell">Numéro de suivi</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for order in orders %}
                            <tr>
                                <td>{{ order.id }}</td>
                                <td>{{ order.createdAt|date('d/m/Y') }}</td>
                                <td>{{ order.total }} €</td>
                                <td>{{ order.orderStatus.label() }}</td>
                                <td class="d-none d-md-table-cell">
                                    {% if order.trackingNumber %}
                                        {{ order.trackingNumber }}
                                    {% else %}
                                        <span class="text-muted">En attente d'expédition</span>
                                    {% endif %}
                                </td>
                            </tr>
                            <tr>
                                <td colspan="5">
                                    <h5>Détails des produits</h5>
                                    <ul class="list-group">
                                        {% for line in order.orderLines %}
                                            <li class="list-group-item">{{ line.product.name }} - {{ line.quantity }} x {{ line.price }} €</li>
                                        {% endfor %}
                                    </ul>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5" class="text-center">Vous n'avez pas encore de commandes.</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <div class="appointments-section mb-5">
            <h2 class="mb-4">Mes Rendez-vous</h2>
            <ul class="list-group">
                {% for appointment in appointments %}
                    <li class="list-group-item">
                        <strong>Rendez-vous #{{ appointment.id }}</strong>
                        - {{ appointment.appointmentDate|date('d/m/Y H:i') }}
                        - {{ appointment.service.name|capitalize }}
                        <br>
                        Statut :
                        {% if appointment.status.name == 'approuvé' %}
                            <span class="text-success">Approuvé</span>
                            {% if appointment.payment is null %}
                                <a href="{{ path('appointment_pay', {'id': appointment.id}) }}" class="btn btn-primary btn-sm ms-2">Payer maintenant</a>
                            {% else %}
                                <span class="text-info">Payé le {{ appointment.payment.paymentDate|date('d/m/Y') }}</span>
                            {% endif %}
                        {% elseif appointment.status.name == 'rejeté' %}
                            <span class="text-danger">Refusé</span>
                        {% elseif appointment.status.name == 'payé' %}
                            <span class="text-info">Payé</span>
                        {% else %}
                            <span class="text-warning">{{ appointment.status.name|capitalize }}</span>
                        {% endif %}
                    </li>
                {% else %}
                    <li class="list-group-item">Vous n'avez pas encore de rendez-vous.</li>
                {% endfor %}
            </ul>
        </div>
    </div>
{% endblock %}
